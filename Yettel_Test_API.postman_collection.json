		{
			"name": "Tasks",
			"item": [
				{
					"name": "Create Task (Basic User)",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{basic_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"body\": \"My first task\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/tasks",
							"host": ["{{base_url}}"],
							"path": ["api", "tasks"]
						}
					}
				},
				{
					"name": "List Tasks (Basic User - Own Tasks)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{basic_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/tasks?page=1&sort=newest",
							"host": ["{{base_url}}"],
							"path": ["api", "tasks"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "sort",
									"value": "newest",
									"description": "newest or oldest"
								}
							]
						}
					}
				},
				{
					"name": "List Tasks (Admin - All Tasks)",
					"request": {
						"method": "GET",
						"header": [
							{
								"key": "Authorization",
								"value": "Bearer {{admin_token}}"
							}
						],
						"url": {
							"raw": "{{base_url}}/api/tasks?page=1&sort=newest",
							"host": ["{{base_url}}"],
							"path": ["api", "tasks"],
							"query": [
								{
									"key": "page",
									"value": "1"
								},
								{
									"key": "sort",
									"value": "newest"
								}
							]
						}
					}
				},
				{
					"name": "Update Task (Basic User - Own Task)",
					"request": {
						"method": "PUT",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							},
							{
								"key": "Authorization",
								"value": "Bearer {{basic_token}}"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n  \"body\": \"Updated task content\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/tasks/:id",
							"host": ["{{base_url}}"],
							"path": ["api", "tasks", ":id"],
							"variable": [
